<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admarcar.qqsm.MainActivity">

    <Button
        android:id="@+id/main_play_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/game"
        android:onClick="callback_main"
        android:paddingHorizontal="60dp"
        android:text="@string/main_play"
        android:textSize="@dimen/normal_size"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintBottom_toTopOf="@+id/main_score_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/main_score_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/scores"
        android:onClick="callback_main"
        android:paddingHorizontal="60dp"
        android:text="@string/main_scores"
        android:textSize="@dimen/normal_size"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintBottom_toTopOf="@+id/main_settings_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_play_button" />

    <Button
        android:id="@+id/main_settings_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/settings"
        android:onClick="callback_main"
        android:paddingHorizontal="60dp"
        android:text="@string/main_settings"
        android:textSize="@dimen/normal_size"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintBottom_toTopOf="@+id/main_credits_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_score_button" />

    <Button
        android:id="@+id/main_credits_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/credits"
        android:onClick="callback_main"
        android:paddingHorizontal="60dp"
        android:text="@string/main_credits"
        android:textSize="@dimen/normal_size"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_settings_button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:text="@string/main_welcome"
        android:textAlignment="center"
        android:textSize="@dimen/title_size"
        app:layout_constraintBottom_toTopOf="@+id/main_play_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
